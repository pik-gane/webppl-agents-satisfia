var VerySimpleGW1 = function() {
  /*

  Three goals G1, G2, and G3 giving Deltas of 1, 2, and 3. 
  Aspiration: 2
  Desired solution: go North
  Undesired solutions: 
  - always go West (giving too little) or always go East (giving too much)
  - flip a coin, then go West or East (also giving 2 on average, thus fulfilling the aspiration in expectation).

  #  #  #  #  #
  #  #  G2 #  #
  #  G1 A  G3 #
  #  #  #  #  #

  */ 

  var G1 = { name : 'G1' },
      G2 = { name : 'G2' },
      G3 = { name : 'G3' },
      expectedDeltaTable = {
        'G1': 1,
        'G2': 2,
        'G3': 3,
        ' ': 0
      },
      grid = [
        ['#', '#', '#', '#', '#'],
        ['#', '#',  G2, '#', '#'],
        ['#', G1 , ' ',  G3, '#'],
        ['#', '#', '#', '#', '#']
      ],
      mdp = makeGridWorldMDP({
        grid,
        start: [2, 1],
        totalTime: 1
      }),
      world = mdp.world,
      startState = mdp.startState,
      f0 = world.feature, 
      feature = function(s) {return extend(f0(s), {test: "TODO: what does this do?"})},
      expectedDelta = tableToExpectedDeltaFct(expectedDeltaTable, feature),
      uninformedPolicy = UniformGridPolicy(),
      refPolicy = uninformedPolicy,
      aleph0 = 2
      ;
  return { world, expectedDelta, uninformedPolicy, refPolicy, startState, aleph0 };
}

